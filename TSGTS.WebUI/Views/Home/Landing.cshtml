@{
    ViewData["Title"] = "Hoş Geldiniz";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<style>
    .hero {
        background: linear-gradient(135deg, #2563eb, #0ea5e9);
        border-radius: 18px;
        padding: 28px;
        color: #fff;
        box-shadow: 0 18px 48px rgba(37,99,235,0.18);
    }
    .hero h3 { font-weight: 700; margin-bottom: 8px; }
    .hero p { margin-bottom: 0; color: rgba(255,255,255,0.85); }
    .option-card {
        border: 1px solid #e5e7eb;
        border-radius: 14px;
        padding: 18px;
        height: 100%;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
        background: #fff;
    }
    .option-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 14px 30px rgba(15,23,42,0.08);
    }
    .option-title { font-weight: 700; font-size: 18px; margin-bottom: 6px; }
    .option-text { color: #6b7280; margin-bottom: 14px; }
</style>

<div class="hero mb-4">
    <h3>Teknik Servis ve Garanti Takip</h3>
    <p>Servis kodu ile müşteri takibi, admin panelinden kayıt ve süreç yönetimi.</p>
</div>

<div class="row g-3">
    <div class="col-md-6">
        <div class="option-card">
            <div class="option-title">Servis Takip (Müşteri)</div>
            <div class="option-text">Servis kodu ve kayıtlı iletişim bilginizle durumunuzu, garanti bilgisini ve yapılan işlemleri görüntüleyin.</div>
            <a class="btn btn-primary w-100" href="/Takip">Servis Takip</a>
        </div>
    </div>
    <div class="col-md-6">
        <div class="option-card">
            <div class="option-title">Admin Girişi</div>
            <div class="option-text">Müşteri, cihaz ve servis kayıtlarını oluşturun; parça/fatura ve durum yönetimini gerçekleştirin.</div>
            <a class="btn btn-outline-primary w-100" href="/Account/Login">Admin Girişi</a>
        </div>
    </div>
</div>
