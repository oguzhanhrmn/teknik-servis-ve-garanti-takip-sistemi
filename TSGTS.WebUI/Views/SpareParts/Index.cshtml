@model IEnumerable<TSGTS.Core.DTOs.SparePartDto>
@{
    ViewData["Title"] = "Yedek Parçalar";
}

<div class="card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <h4 class="mb-1">Yedek Parçalar</h4>
            <div class="text-muted">Stok listesi</div>
        </div>
        <a class="btn btn-primary" asp-action="Create">Yeni Parça</a>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Kod</th>
                    <th>Stok</th>
                    <th>Birim Fiyat</th>
                    <th>Kritik Seviye</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PartName</td>
                    <td>@item.PartCode</td>
                    <td>@item.StockQuantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.CriticalLevel</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
