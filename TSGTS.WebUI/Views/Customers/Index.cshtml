@model IEnumerable<TSGTS.Core.DTOs.CustomerDto>
@{
    ViewData["Title"] = "Müşteriler";
}

<div class="card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-2">
        <div>
            <h4 class="mb-1">Müşteriler</h4>
            <div class="text-muted">Kayıtlı müşteri listesi</div>
        </div>
        <div class="d-flex align-items-center gap-2 flex-wrap">
            <input type="search" id="customerSearch" class="form-control form-control-sm" placeholder="Ara: ad, soyad, telefon, e-posta" style="min-width: 240px;" />
            <a class="btn btn-primary btn-sm" href="/Customers/Create">Yeni Müşteri</a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0" id="customerTable">
            <thead>
                <tr>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Telefon</th>
                    <th>E-posta</th>
                    <th>Vergi No</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody id="customerBody">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>@item.TaxNo</td>
                    <td class="text-end">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form" data-id="@item.Id">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const input = document.getElementById("customerSearch");
            const tbody = document.getElementById("customerBody");

            async function search(term) {
                const resp = await fetch(`/api/customers/search?q=${encodeURIComponent(term)}`, { credentials: "include" });
                if (!resp.ok) return;
                const data = await resp.json();
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : "";
                tbody.innerHTML = data.map(c => `
                    <tr>
                        <td>${c.firstName ?? ""}</td>
                        <td>${c.lastName ?? ""}</td>
                        <td>${c.phone ?? ""}</td>
                        <td>${c.email ?? ""}</td>
                        <td>${c.taxNo ?? ""}</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" href="/Customers/Edit/${c.id}">Düzenle</a>
                            <form action="/Customers/Delete" method="post" class="d-inline delete-form" data-id="${c.id}">
                                ${token ? `<input type="hidden" name="__RequestVerificationToken" value="${token}" />` : ""}
                                <input type="hidden" name="id" value="${c.id}" />
                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                            </form>
                        </td>
                    </tr>
                `).join("");
            }

            let timer;
            input.addEventListener("input", () => {
                clearTimeout(timer);
                timer = setTimeout(() => search(input.value), 250);
            });

            // Silme sonrası beklemeden satırı kaldırmak için form submit'ini yakala
            function wireDeleteForms() {
                document.querySelectorAll(".delete-form").forEach(form => {
                    if (form.dataset.wired) return;
                    form.dataset.wired = "1";
                    form.addEventListener("submit", async (e) => {
                        e.preventDefault();
                        if (!confirm("Silinsin mi?")) return;
                        const fd = new FormData(form);
                        const resp = await fetch(form.action, {
                            method: "POST",
                            body: fd,
                            credentials: "include"
                        });
                        if (resp.ok) {
                            const row = form.closest("tr");
                            if (row) row.remove();
                        } else {
                            alert("Silme işlemi başarısız oldu (HTTP " + resp.status + ").");
                        }
                    });
                });
            }

            wireDeleteForms();
            // Arama sonrası yeni formlar eklenirse tekrar bağla
            input.addEventListener("input", () => setTimeout(wireDeleteForms, 300));
        });
    </script>
}
