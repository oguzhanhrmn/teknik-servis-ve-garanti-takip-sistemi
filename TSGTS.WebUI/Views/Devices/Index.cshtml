@model IEnumerable<TSGTS.Core.DTOs.DeviceDto>
@{
    ViewData["Title"] = "Cihazlar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Cihazlar</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Cihaz</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Seri No</th>
            <th>MarkaId</th>
            <th>ModelId</th>
            <th>Satın Alma</th>
            <th>Garanti Bitiş</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SerialNumber</td>
            <td>@item.BrandId</td>
            <td>@item.ModelId</td>
            <td>@item.PurchaseDate?.ToString("dd.MM.yyyy")</td>
            <td>@item.WarrantyEndDate?.ToString("dd.MM.yyyy")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
