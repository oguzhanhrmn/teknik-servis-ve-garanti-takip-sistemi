@model TSGTS.WebUI.Models.TicketStatusUpdateViewModel
@{
    ViewData["Title"] = "Durum Güncelle";
}

<h2>Durum Güncelle</h2>
<hr />

<form asp-action="Status" method="post" class="row g-3">
    <input type="hidden" asp-for="TicketId" />
    <div class="col-md-6">
        <label asp-for="StatusId" class="form-label"></label>
        <select asp-for="StatusId" asp-items="Model.Statuses" class="form-select"></select>
        <span asp-validation-for="StatusId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="ActionLog" class="form-label">İşlem Notu</label>
        <textarea asp-for="ActionLog" class="form-control" rows="3"></textarea>
        <span asp-validation-for="ActionLog" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Güncelle</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
