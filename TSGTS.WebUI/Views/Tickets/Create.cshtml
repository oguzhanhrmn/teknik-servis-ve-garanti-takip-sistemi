@model TSGTS.WebUI.Models.TicketCreateViewModel
@{
    ViewData["Title"] = "Yeni Servis Kaydı";
}

<h2>Yeni Servis Kaydı</h2>
<hr />

<form asp-action="Create" method="post" class="row g-3">
    <div class="col-md-4">
        <label class="form-label" for="Ticket_CustomerId">Müşteri</label>
        <select asp-for="Ticket.CustomerId" asp-items="Model.Customers" class="form-select"></select>
        <span asp-validation-for="Ticket.CustomerId" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label" for="Ticket_DeviceId">Cihaz</label>
        <select asp-for="Ticket.DeviceId" asp-items="Model.Devices" class="form-select"></select>
        <span asp-validation-for="Ticket.DeviceId" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label" for="Ticket_StatusId">Durum</label>
        <select asp-for="Ticket.StatusId" asp-items="Model.Statuses" class="form-select"></select>
        <span asp-validation-for="Ticket.StatusId" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Ticket.Description" class="form-label"></label>
        <textarea asp-for="Ticket.Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Ticket.Description" class="text-danger"></span>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </div>
</form>

<partial name="_ValidationScriptsPartial" />
