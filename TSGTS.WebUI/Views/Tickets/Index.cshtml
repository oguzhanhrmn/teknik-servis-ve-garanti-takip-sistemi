@model IEnumerable<TSGTS.WebUI.Models.TicketListItemViewModel>
@{
    ViewData["Title"] = "Servis Kayıtları";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Servis Kayıtları</h2>
    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Müşteri</th>
            <th>Cihaz</th>
            <th>Durum</th>
            <th>Açıklama</th>
            <th>Oluşturma</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CustomerName</td>
            <td>@item.DeviceSerial</td>
            <td>@item.StatusName</td>
            <td>@item.Description</td>
            <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" asp-action="Status" asp-route-id="@item.Id">Durum Güncelle</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
