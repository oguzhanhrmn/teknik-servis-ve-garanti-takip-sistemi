@model IEnumerable<TSGTS.Core.DTOs.PaymentDto>
@{
    ViewData["Title"] = "Ödemeler";
}

<div class="card mb-3">
    <div class="card-body d-flex justify-content-between align-items-center">
        <div>
            <h4 class="mb-1">Ödemeler</h4>
            <div class="text-muted">Faturalara ait ödemeler</div>
        </div>
        <a class="btn btn-primary" asp-action="Create">Yeni Ödeme</a>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table mb-0">
            <thead>
                <tr>
                    <th>Ödeme #</th>
                    <th>Fatura Id</th>
                    <th>Tip Id</th>
                    <th>Tutar</th>
                    <th>Tarih</th>
                    <th class="text-end">İşlem</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.InvoiceId</td>
                    <td>@item.PaymentTypeId</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.Date.ToString("dd.MM.yyyy")</td>
                    <td class="text-end">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
